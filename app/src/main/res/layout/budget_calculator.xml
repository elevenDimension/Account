<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/budget_seven"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_calculator_selector"
                    android:text="7"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/budget_eight"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_calculator_selector"
                    android:text="8"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/budget_nine"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_calculator_selector"
                    android:text="9"
                    android:textSize="30sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/budget_four"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_calculator_selector"
                    android:text="4"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/budget_five"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_calculator_selector"
                    android:text="5"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/budget_six"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_calculator_selector"
                    android:text="6"
                    android:textSize="30sp"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/budget_ac"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outcome_calclayout_selector"
            android:text="AC"
            android:textColor="#ffffff"
            android:textSize="30sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/budget_one"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_calculator_selector"
                    android:text="1"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/budget_two"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_calculator_selector"
                    android:text="2"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/budget_three"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_calculator_selector"
                    android:text="3"
                    android:textSize="30sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_calculator_selector"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/budget_zero"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_calculator_selector"
                    android:text="0"
                    android:textSize="30sp"/>

                <ImageButton
                    android:id="@+id/budget_back"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_calculator_selector"
                    android:src="@drawable/calc_delete"
                    android:textSize="30sp"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/budget_OK"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/income_calclayout_selector"
            android:text="OK"
            android:textColor="#ffffff"
            android:textSize="30sp"/>

    </LinearLayout>

</LinearLayout>
