<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 时间选择器动画 -->
    <style name="date_popupWindow_anim_style">
        <!-- 显示时动画xml -->
        <item name="android:windowEnterAnimation">@anim/date_popupwindow_in</item>

        <!-- 消失时动画xml -->
        <item name="android:windowExitAnimation">@anim/date_popupwindow_out</item>
    </style>

    <!-- 计算器动画 -->
    <style name="calc_popupWindow_anim_style">
        <!-- 显示时动画xml -->
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>

        <!-- 消失时动画xml -->
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorFullTransparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
